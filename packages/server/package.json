{
  "name": "@vox/server",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.js",
      "default": "./dist/main.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "dev": "npx tsdown --watch",
    "build": "npx tsdown",
    "start": "node ./dist/main.mjs",
    "db:generate": "npx drizzle-kit generate",
    "db:push": "npx drizzle-kit push"
  },
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "commands": [
            "nx run @vox/server:type",
            "npm run build"
          ],
          "parallel": false,
          "cwd": "packages/server"
        }
      },
      "dev": {
        "executor": "nx:run-commands",
        "options": {
          "command": "npm run dev",
          "cwd": "packages/server"
        }
      },
      "start": {
        "executor": "nx:run-commands",
        "options": {
          "command": "npm run start",
          "cwd": "packages/server"
        }
      },
      "type": {
        "executor": "@nx/js:tsc",
        "options": {
          "outputPath": "packages/server/dist",
          "tsConfig": "packages/server/tsconfig.lib.json",
          "main": "packages/server/src/main.ts"
        }
      },
      "db:generate": {
        "executor": "nx:run-commands",
        "options": {
          "command": "npm run db:generate",
          "cwd": "packages/server"
        }
      },
      "db:push": {
        "executor": "nx:run-commands",
        "options": {
          "command": "npm run db:push",
          "cwd": "packages/server"
        }
      }
    }
  },
  "dependencies": {
    "@hono/node-server": "^1.19.7",
    "better-sqlite3": "^12.5.0",
    "chalk": "^5.6.2",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.6.3",
    "nstall": "^0.2.0",
    "p-queue": "^9.0.1",
    "pino": "^10.1.0",
    "uuid": "^13.0.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^25.0.3",
    "@types/uuid": "^10.0.0",
    "drizzle-kit": "^0.31.8",
    "tsdown": "^0.18.4"
  }
}
